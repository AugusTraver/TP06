@{
    ViewData["Title"] = "Index";
}

<div class="inicio">
    <form action="/Home/IniciarSesion" method="post" class="login-form">
        <label for="Nombre" class="form-label">Usuario:</label>
        <input type="text" id="Nombre" name="Nombre" required class="form-input" />

        <label for="Contraseña" class="form-label">Contraseña:</label>
        <input type="password" id="Contraseña" name="Contraseña" required class="form-input" />

        <button type="submit" class="form-btn">Iniciar Sesión</button>
    </form>
    <form asp-action="DRegistrarse" method="get" class="register-form">
        <button type="submit" class="form-btn">Registrarse</button>
    </form>
</div>